@model BookModel

<!--This is a partial view of book thumbnail-->
<div class="card mb-4 shadow-sm">
    <img src="@(String.IsNullOrEmpty(Model.CoverImageUrl) ? "/lib/images/Cover-Image.png" : Model.CoverImageUrl)" class="img-thumbnail img-fluid p-5"/>
    <div class="card-body">
        <h3 class="card-title">@(String.IsNullOrEmpty(Model.Title) ? "Name unavailable" : Model.Title)</h3>
        <p class="card-text">@(String.IsNullOrEmpty(Model.Description) ? "Description unavailable" : Model.Description)</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-controller="Book" asp-action="GetBook" asp-route-id="@Model.ID" class="btn btn-sm btn-outline-secondary">View Details</a>
            </div>
            <small class="text-muted">@(String.IsNullOrEmpty(Model.Author) ? "N/A" : Model.Author)</small>
        </div>
    </div>
</div>
