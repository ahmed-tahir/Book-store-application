@model EmailConfirmationModel

@{
    ViewBag.Title = "ConfirmEmail";
}

<h1 class="text-center p-4">Confirm Email</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-2">
            @if (Model.EmailVerified)
            {
                <div class="alert alert-success" role="alert">
                    <p class="text-success text-center">Your email has been verified successfully.</p>
                </div>
            }
            else
            {
                @if (Model.EmailSent)
                {
                    <div class="alert alert-success" role="alert">
                        <p class="text-success text-center">A new email has been sent on your registered email id.</p>
                    </div>
                }
                else
                {
                    <div class="alert alert-success" role="alert">
                        <p class="text-success text-center">We have sent an email on your registered email id<br />
                        Please click on the link to login</p>
                    </div>
                }

                <form asp-controller="Account" asp-action="ConfirmEmail">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Email" />

                    <p class="text-success text-center">Did not get an email or deleted by mistake?</p>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Resend confirmation email" />
                    </div>
                </form>

                @*<h3 class="text-danger text-center">Oops...something went wrong</h3>
                <p class="text-danger text-center">It seems your token has been expired.</p>
                <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Return to home</a>*@
            }
        </div>
    </div>
</div>